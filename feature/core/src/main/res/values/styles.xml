<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/drawable_button</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="AppButton.Outlined">
        <item name="android:background">@drawable/drawable_button_outline</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:buttonStyle">@style/AppButton</item>
    </style>
</resources>