<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startupFragment">

    <fragment
        android:id="@+id/startupFragment"
        android:name="jp.co.vegeta.startup.StartupFragment">
        <action
            android:id="@+id/action_to_search"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_to_suggest_search"
            app:destination="@id/suggestSearchFragment" />
        <action
            android:id="@+id/action_to_voice_recognize"
            app:destination="@id/voiceRecognize" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="jp.co.vegeta.fit.SearchFragment" />

    <fragment
        android:id="@+id/suggestSearchFragment"
        android:name="jp.co.vegeta.fit.suggest_search.SuggestSearchFragment" />

    <fragment
        android:id="@+id/voiceRecognize"
        android:name="com.vegeta.voicerecoginize.VoiceRecognizeFragment" />
</navigation>