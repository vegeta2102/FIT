<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startupFragment">

    <fragment
        android:id="@+id/startupFragment"
        android:name="jp.co.vegeta.startup.StartupFragment">
        <action
            android:id="@+id/action_to_main"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="jp.co.vegeta.fit.MainFragment">
        <action
            android:id="@+id/action_to_wifi"
            app:destination="@id/wifiFragment" />
    </fragment>

    <fragment
        android:id="@+id/wifiFragment"
        android:name="jp.co.vegeta.fit.WifiFragment" />
</navigation>