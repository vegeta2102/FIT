<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainFragment">

        <Button
            android:id="@+id/motorbike"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:text="普通自動二輪車"
            android:textColor="@color/selector_switch_button"
            app:layout_constraintEnd_toStartOf="@id/car"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/car"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp"
            android:text="普通自動車"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/motorbike"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/excel_reading"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:text="Excel"
            app:layout_constraintEnd_toStartOf="@id/car"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/car" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>